<% if (title) { %>
  <h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<div class="account-management">
  <% if (locals.accountData) { %>
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
  <% } %>

  <p>You're logged in.</p>

  <section id="account-update-section">
    <h3>Account Management</h3>
    <p>
      <a href="/account/update/<%= locals.accountData.account_id %>" title="Click to update account information">
        Update Account Information
      </a>
    </p>
  </section>

  <% if (locals.accountData && (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin')) { %>
    <hr />
    <section id="inventory-mgmt-section">
      <h3>Inventory Management</h3>
      <p>
        <a href="/inv/" title="Manage inventory">Manage Inventory</a>
      </p>
    </section>
  <% } %>
</div>