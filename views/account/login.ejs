<h2><%= title %></h2>
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <%  }) %>
  </ul>
<% } %>

<div class="login-container">
  <form id="loginForm" action="/account/login" method="post">
    <label for="account_email">Email Address:</label>
    <input type="email" name="account_email" id="account_email" required value="<%= locals.account_email %>">

    <label for="account_password">Password:</label>
    <span>Passwords must be at least 12 characters and include at least 1 number, 1 capital letter and 1 special character</span>
    <input type="password" name="account_password" id="account_password" required 
           pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <button type="button" id="psswdBtn">Show Password</button>

    <button type="submit">Login</button>
  </form>
  
  <p>No account? <a href="/account/register">Sign up</a></p>
</div>

<script>
  const psswdBtn = document.querySelector("#psswdBtn");
  psswdBtn.addEventListener("click", function() {
    const psswdInput = document.getElementById("account_password");
    const type = psswdInput.getAttribute("type");
    if (type === "password") {
      psswdInput.setAttribute("type", "text");
      psswdBtn.textContent = "Hide Password";
    } else {
      psswdInput.setAttribute("type", "password");
      psswdBtn.textContent = "Show Password";
    }
  });
</script>