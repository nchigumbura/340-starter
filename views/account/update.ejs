<h2><%= title %></h2>
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
   <%  }) %>
  </ul>
<% } %>

<form action="/account/update" method="post" class="account-form">
  <fieldset>
    <legend>Account Update</legend>
    <label for="accountFirstname">First Name</label>
    <input type="text" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname || (locals.accountData ? locals.accountData.account_firstname : '') %>">

    <label for="accountLastname">Last Name</label>
    <input type="text" name="account_lastname" id="accountLastname" required value="<%= locals.account_lastname || (locals.accountData ? locals.accountData.account_lastname : '') %>">

    <label for="accountEmail">Email Address</label>
    <input type="email" name="account_email" id="accountEmail" required value="<%= locals.account_email || (locals.accountData ? locals.accountData.account_email : '') %>">

    <button type="submit">Update Info</button>
    
    <input type="hidden" name="account_id" value="<%= locals.account_id || (locals.accountData ? locals.accountData.account_id : '') %>">
  </fieldset>
</form>

<form action="/account/password" method="post" class="account-form">
  <fieldset>
    <legend>Change Password</legend>
    <p class="notice">
      Passwords must be at least 12 characters and include at least 1 number, 1 capital letter and 1 special character. 
      <em>Entering a password will change your current password.</em>
    </p>
    
    <label for="accountPassword">New Password</label>
    <input type="password" name="account_password" id="accountPassword" required 
    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

    <button type="submit">Change Password</button>

    <input type="hidden" name="account_id" value="<%= locals.account_id || (locals.accountData ? locals.accountData.account_id : '') %>">
  </fieldset>
</form>