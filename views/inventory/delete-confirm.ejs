<h2><%= title %></h2>
<%- messages() %>

<p class="notice">Confirm Deletion - The delete is permanent.</p>

<form id="deleteForm" action="/inv/delete" method="post">
  <label for="inv_make">Make</label>
  <input type="text" name="inv_make" id="invMake" readonly value="<%= locals.inv_make %>">

  <label for="inv_model">Model</label>
  <input type="text" name="inv_model" id="invModel" readonly value="<%= locals.inv_model %>">

  <label for="inv_year">Year</label>
  <input type="text" name="inv_year" id="invYear" readonly value="<%= locals.inv_year %>">

  <label for="inv_price">Price</label>
  <input type="text" name="inv_price" id="invPrice" readonly value="<%= locals.inv_price %>">

  <p>Are you sure you want to delete this vehicle?</p>
  <button type="submit">Delete Vehicle</button>

  <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">
</form>