<h2><%= title %></h2>
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <%  }) %>
  </ul>
<% } %>

<form action="/inv/add-inventory" method="post">
  <label>Classification</label>
  <%- classificationSelect %> <label for="inv_make">Make</label>
  <input type="text" name="inv_make" id="invMake" required value="<%= locals.inv_make %>">

  <label for="inv_model">Model</label>
  <input type="text" name="inv_model" id="invModel" required value="<%= locals.inv_model %>">

  <label for="inv_year">Year</label>
  <input type="number" name="inv_year" id="invYear" required min="1900" max="2099" value="<%= locals.inv_year %>">

  <label for="inv_description">Description</label>
  <textarea name="inv_description" required><%= locals.inv_description %></textarea>

  <label for="inv_image">Image Path</label>
  <input type="text" name="inv_image" value="/images/vehicles/no-image.png" required>

  <label for="inv_thumbnail">Thumbnail Path</label>
  <input type="text" name="inv_thumbnail" value="/images/vehicles/no-image-tn.png" required>

  <label for="inv_price">Price</label>
  <input type="number" name="inv_price" step="0.01" required value="<%= locals.inv_price %>">

  <label for="inv_miles">Miles</label>
  <input type="number" name="inv_miles" required value="<%= locals.inv_miles %>">

  <label for="inv_color">Color</label>
  <input type="text" name="inv_color" required value="<%= locals.inv_color %>">

  <button type="submit">Add Vehicle</button>
</form>